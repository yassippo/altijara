{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      
      <h1>{{ heading_bulktitle }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><i class="fa fa-list"></i> {{ text_bulklist }}</h3>
		</div>
		<div class="panel-body">
			<div class="well">
				<div class="row">
					<div class="col-sm-12" style="text-align:left;">
					<div>
						<label class="control-label col-form-label" for="input-name" style="  font-weight: normal; ">{{ entry_time_allowed }}</label><label style="font-weight: bold;">{{ timeallowed }}</label>
					</div>
					<div>
						<label class="control-label col-form-label" for="input-name" style=" font-weight: normal ">{{ entry_file_size }}</label><label style="font-weight: bold;">{{ filesize }}</label>
					</div>
				</div>
			</div>
		</div>
		<form action="{{ export }}" method="post" enctype="multipart/form-data" id="export">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-download"></i>{{ entry_export }}</h3>
			</div>
			<div class="well">
				<div class="row">
					<div class="col-sm-4" style="text-align:left;">
						<label class="control-label col-form-label" for="input-name" >{{ entry_seller }}</label>
						<select name="vendor_id" id="input-status" class="form-control">
							<option value="">{{ text_select }}</option>
							{% for seller in sellers %}
							{% if seller.vendor_id == vendor_id %}
							<option value="{{ seller.vendor_id }}" selected="selected">{{ seller.firstname }} ({{ seller.name }})</option>
							{% else %}
							<option value="{{ seller.vendor_id }}">{{ seller.firstname }} ({{ seller.name }})</option>
							{% endif %}
							{% endfor %}
						</select>
					</div>
					
					<div class="form-group">
						<a href="{{ export }}"><button class="btn btn-primary">{{ entry_export }}</button></a>
					</div>
				</div>
			</div>
		</form>
		<form action="{{ import }}" method="post" enctype="multipart/form-data" id="import">
			<div class="panel-heading">
				<h3 class="panel-title "><i class="fa fa-upload"></i> {{ entry_upload }}</h3>
			</div>
			<div class="well">
				<div class="row">
					<div class="col-sm-4" style="text-align:left;">
						<label class="control-label col-form-label" for="input-name" >{{ entry_seller }}</label>
						<select name="vendor_id" id="input-status" class="form-control">
							<option value="">{{ text_select }}</option>
							{% for seller in sellers %}
							{% if seller.vendor_id == vendor_id %}
							<option value="{{ seller.vendor_id }}" selected="selected">{{ seller.firstname }} ({{ seller.name }})</option>
							{% else %}
							<option value="{{ seller.vendor_id }}">{{ seller.firstname }} ({{ seller.name }})</option>
							{% endif %}
							{% endfor %}
						</select>
					</div>
					<div class="form-group">
						<input type="file" style="height:35px; margin-top: 22px;"  name="import">
					</div>
				</div>
				<div class="form-group">
					<a href="{{ import }}"><button class="btn btn-primary">{{ button_upload }}</button></a>
				</div>
			</div>
		</form>
		
    </div>
  </div>
</div>



{{ footer }}