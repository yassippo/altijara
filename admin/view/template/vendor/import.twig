{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
		<a class="btn btn-primary" onclick="$('#import').submit();" class="button">{{ button_import }}</a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
       {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
	{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
    <div class="panel-body">
      <form action="{{ import }}" method="post" enctype="multipart/form-data" id="import">
        <div class="form-group col-sm-12">
			<label class="col-sm-4 control-label">{{ entry_import }}</label>
            <div class="col-sm-8"><input type="file" name="import" /></div>
        </div>
		<div class="form-group  col-sm-12">
				<label class="col-sm-4 control-label">{{ entry_vendors }}</label>
				<div class="col-sm-8">
					 <select name="vendor" class="form-control">
					  {% for vendor in vendors %}              
					 <option value="{{ vendor.vendor_id }}" >{{ vendor.firstname }} {{ vendor.lastname }}</option>
					  {% endfor %}
					</select>
				</div>
			</div>
		<div class="form-group col-sm-12">
			<label class="col-sm-4 control-label">{{ entry_stores }}</label>
			<div class="col-sm-8">
				  <select name="store_id" class="form-control" >
				 <option value="">{{ text_all_stores }}</option>
				 {% for  store in stores %}
				 <option value="{{ store.store_id }}">{{ store.name }}</option>
				{% endfor %}
				 </select>
				</div>
		</div>
			<div class="form-group col-sm-12">
			<label class="col-sm-4 control-label">{{ entry_language }}</label>
			<div class="col-sm-8">
				<select name="language_id" class="form-control">
			 {% for language in languages%} 
			 <option value="{{ language.language_id}}">{{ language.name }}</option>
			 {% endfor %}
			 </select>
				</div>
			</div>
			<div class="form-group col-sm-12">
			<label class="col-sm-4 control-label">{{ entry_importby }}</label>
			<div class="col-sm-8">
				<select name="importby" class="form-control">
				<option value="1">{{ entry_productid }}</option>
			 <option value="2">{{ entry_model }}</option>
			
			 </select>
				</div>
			</div>
			
			<div class="form-group  col-sm-12">
			<label class="col-sm-4 control-label">{{ entry_extrafiled }}</label>
			<div class="col-sm-8" style="padding-left:0px" >
                {% if cfiled %}
               {% for filed in cfiled %}
               <label class="col-sm-6 control-label" style="text-align:left"><input type="text" name="{{ filed }}" class="form-control" placeholder="{{ filed }} excel filed name"></label> {% endfor %}  {% else %}
               No custome filed present

               {% endif %}
              </div>
			</div>
      </form>
      
    </div>
  </div>
  </div>
</div>
{{ footer }}