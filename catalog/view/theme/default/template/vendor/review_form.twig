{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-review" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-review" class="form-horizontal">
		 <!--  tmd vendor2 customer condtion  -->
		  {% if customer2vendor==1 %}
			<div class="form-group">
            <label class="col-sm-2 control-label" for="input-customer">{{ entry_customer }}</label>
            <div class="col-sm-10">
              <input type="text" name="customer" value="{{ customer }}" placeholder="{{ entry_customer }}" id="input-customer" class="form-control" />
              <input type="hidden" name="customer_id" value="{{ customer_id }}"/>
            </div>
			</div>
			{% endif %}
		  <!--  tmd vendor2 customer condtion  -->
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-vendor">{{ entry_seller }}</label>
            <div class="col-sm-10">
                 <input type="text" name="vendor" value="{{ vendor }}" placeholder="{{ entry_seller }}" id="input-vendor" class="form-control" />
				 <input type="hidden" name="vendor_id" value="{{ vendor_id }}"/>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-text">{{ entry_text }}</label>
            <div class="col-sm-10">
              <textarea name="text" cols="60" rows="8" placeholder="{{ entry_text }}" id="input-text" class="form-control">{{ text }}</textarea>
              {% if error_text %}
              <div class="text-danger">{{ error_text }}</div>
              {% endif %}
            </div>
          </div>
            
         {% if review_fieldselect %}
			{% for field in review_fieldselect %}
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-text">{{ field.field_name }}</label>
				<div class="col-sm-10">
					<label class="radio-inline">
						{% if field.value== 1 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="{{ field.value }}" checked="checked" />
						1
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="1" />
						1
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if field.value== 2 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="{{ field.value }}" checked="checked" />
						2
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="2" />
						2
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if field.value== 3 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="{{ field.value }}" checked="checked" />
						3
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="3" />
						3
						{% endif %}
					</label>
					<label class="radio-inline">
							{% if field.value== 4 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="{{ field.value }}" checked="checked" />
						4
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="4" />
						4
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if field.value== 5 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="{{ field.value }}" checked="checked" />
						5
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="5" />
						5
						{% endif %}
					</label>
				</div>
			</div>
			{% endfor %}
			{% else %}
			{% for field in review_fields %}
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-text">{{ field.field_name }}</label>
				<div class="col-sm-10">
					<label class="radio-inline">
						{% if reviewfield == 1 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="1" checked="checked" />
						1
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="1" />
						1
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if reviewfield == 2 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="2" checked="checked" />
						2
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="2" />
						2
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if reviewfield == 3 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="3" checked="checked" />
						3
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="3" />
						3
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if reviewfield == 4 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="4" checked="checked" />
						4
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="4" />
						4
						{% endif %}
					</label>
					<label class="radio-inline">
						{% if reviewfield == 5 %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="5" checked="checked" />
						5
						{% else %}
						<input type="radio" name="reviewfield[{{ field.rf_id }}]" value="5" />
						5
						{% endif %}
					</label>
				</div>
			</div>
			{% endfor %}
			{% endif %}
        
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                
                {% if status %}
                
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                
                {% else %}
                
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                
                {% endif %}
              
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
