<div class="box oc-module">
	<h3 class="box-heading">{{ heading_title }}</h3>
	<div class="box-content row">
		<div class="box-product latest-seller">
		{% for vendor in vendors %}
			<div class="product-layout xs-100 sm-50 md-33 lg-25 xl-25">
				<div class="product-thumb transition allseller product-wrapper">
					<div class="image">
						<a href="{{ vendor.href }}"><img src="{{ vendor['thumb'] }}" alt="{{ vendor.firstname }}" title="{{ vendor.firstname }}" class="img-responsive" /></a>
					</div>
					<div class="caption">
						<h4><i class="fa fa-home"></i> {{ vendor.storename }}</h4>
						<ul class="list-unstyled user-links">
						   {% if vendor_hidevname %}
						   <li><i class="fa fa-user"></i> {{ vendor.firstname }}</li>
						    {% endif %}
							{% if vendor_hidevemail %}
						  <li><i class="fa fa-envelope"></i> {{ vendor.email }}</li>
						   {% endif %}
						   {% if vendor_hidevponeno %}
						  <li><i class="fa fa-phone"></i> {{ vendor.telephone }}</li>
						  {% endif %}
						</ul>
						<div class="total">
							{% if vendor_hidevsocialicon %}
							<ul class="list-inline social-icons pull-left">
								<li><a href="{{ vendor.facebookurl }}" target="new"><i class="fa fa-facebook"></i></a></li>
								<li><a href="{{ vendor.googleurl }}" target="new"><i class="fa fa-google"></i></a></li>
							</ul>
						  {% endif %}	
							<p> {{ text_sellertotal }}
								<span class="label {% if vendor.totalproduct == 0  %} text-danger {% else %} success {% endif %} countproduct">{{ vendor.totalproduct }}</span>
							</p>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
		</div>
	</div>
</div>