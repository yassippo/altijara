{{ header }}
<div id="container" class="container j-container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}{{ column_right }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} findme">{{ content_top }}
      <h3 class="heading-title">{{ heading_title }}</h3>
      <div class="findlogo">
		<img src="{{ logos }}" class="img-responsive" title="logo" alt="logo" />
	  </div>
      <ul class="list-unstyled">
        {% if company %}
        <li><div class="label">{{ text_companyname }}</div>  {{ company }} </li>
        {% endif %}
        
        <li><div class="label">{{ text_rating }}</div>
            {% for review in reviews %}
          <span class="rating">
          {% for i in 1..5 %}
                  {% if review.reviewvalue < i %}
				<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
				{% else %}
				<span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
				{% endif %}
				 {% endfor %}  
          </span>
        {% endfor %}
        </li>
         {% if vendor_hidevname %}  
			  {% if display_name %}
			  <li><div class="label">{{ text_contactname }}</div>  {{ display_name }} </li>
			  {% endif %}
          {% endif %}
		 {% if vendor_hidevponeno %} 
			  {% if telephone %}
			  <li><div class="label">{{ text_telephone }}</div>  {{ telephone }} </li>
			  {% endif %}
          {% endif %}
		  
          {% if fax %}
          <li><div class="label">{{ text_fax }}</div>  {{ fax }} </li>
          {% endif %}
         
          
          <li><div class="label">{{ text_location }}</div>  {{ country }} ({{ city }})</li>
       
        {% if vendor_hidevemail %} 
          {% if email %}
          <li><div class="label">{{ text_email }}</div>  {{ email }} </li>
          {% endif %}
        {% endif %}
          
          {% if address %}
          <li><div class="label">{{ text_address }}</div>  {{ address }} </li>
          {% endif %}
           {% if city %}
          <li><div class="label">{{ text_city }}</div>  {{ city }} </li>
          {% endif %}
          
          {% if country %}
          <li><div class="label">{{ text_country }}</div>  {{ country }} </li>
          {% endif %}
          
          {% if zone %}
          <li><div class="label">{{ text_zone }}</div>  {{ zone }} </li>
          {% endif %}
          
          
          {% if postcode %}
          <li><div class="label">{{ text_postcode }}</div>  {{ postcode }} </li>
          {% endif %}
      </ul> 
        
        <div class="map">
			  {% if map_url %}
				{{ map_url }}
              {% else %}
               <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d219104.85983086875!2d75.71658808151895!3d30.90026973769041!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x391a837462345a7d%3A0x681102348ec60610!2sLudhiana%2C+Punjab!5e0!3m2!1sen!2sin!4v1482266274532"></iframe>
			  {% endif %} 
       </div>

      {{ content_bottom }}</div>
    </div>
</div>
{{ footer }}
