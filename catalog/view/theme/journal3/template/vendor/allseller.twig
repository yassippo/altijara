{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
  {% endif %}
    <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
          {% for vendor in vendors %}
              <div class="product-box">
                <div class="product-thumb transition allseller">
                  <div class="image">
                    <a href="{{ vendor.href }}"><img src="{{ vendor.thumb }}" alt="{{ vendor.firstname }}" title="{{ vendor.firstname }}" class="img-responsive" /></a>
				  <div class="smalimage">
					  <img src="{{ vendor.smallthumb }}" class="img-responsive" />
				  </div>
                  </div>
                  <div class="caption">
                     <!--19 02 2020-->
                    <p> {{ text_sellertotal }} <span class="label {% if vendor.totalproduct == 0  %} label-danger {% else %} label-success {% endif %} countproduct">{{ vendor.totalproduct }}</span>
					<!--19 02 2020-->
                    <h4><a href="{{ vendor.href }}"><i class="fa fa-home"></i>  {{ vendor.storename }}</a></h4>
                    <ul class="list-unstyled user-links">
                      {% if vendor_hidevname %}
					  <li><i class="fa fa-user"></i> {{ vendor.firstname }}</li> 
					  {% endif %}
					   {% if vendor_hidevemail %}
                      <li><i class="fa fa-envelope"></i> {{ vendor.email }}</li>
					   {% endif %}
					    {% if vendor_hidevponeno %}
                      <li><i class="fa fa-phone"></i> {{ vendor.telephone }}</li>
					   {% endif %}
                    </ul>
					{% if vendor_hidevsocialicon %}
						<ul class="list-inline social-icons">
						  <li><a href="{{ vendor.facebookurl }}" target="new"><i class="fa fa-facebook"></i></a></li>
						  <li><a href="{{ vendor.googleurl }}" target="new"><i class="fa fa-google"></i></a></li>
						</ul>
					{% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          

          <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>     
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}